# --- Database (MySQL) ---
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=ponghospital

# --- Security ---
JWT_SECRET=change_me_to_a_long_random_secret

# --- CORS/CSP (Production) ---
# Comma separated origins
ALLOWED_ORIGINS=https://www.example.com
# Optional CSP tightening (space separated values)
CSP_CONNECT=https://www.example.com
CSP_IMG=https://www.example.com
# ==========================================
# Environment Configuration
# ==========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=ponghospital
MYSQL_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin User Configuration
ADMIN_USER=admin
ADMIN_PASS=admin123

# Control whether login can fall back to ENV when DB is unavailable
# Set to false in production to enforce DB-only authentication
AUTH_ALLOW_ENV_FALLBACK=false

# File Upload Configuration (ไม่ต้องใช้ Cloudinary แล้ว - เก็บใน MySQL)
# รูปภาพจะถูกเก็บเป็น BLOB ใน MySQL database
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Cache Configuration
CACHE_TTL=300
